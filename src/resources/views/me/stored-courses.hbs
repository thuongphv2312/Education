<div class="mt-4">
  <h1>My course</h1>
</div>
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Tên khóa học</th>
      <th scope="col">Thời gian tạo</th>
    </tr>
  </thead>
  <tbody>
    {{#each courses}}
      <tr>
        <th scope="row">{{sum @index 1}}</th>
        <td>{{this.name}}</td>
        <td>{{this.createdAt}}</td>
        <td>
          <a href="/course/{{this._id}}/edit" class="btn btn-link">Sửa</a>
          <a href="" class="btn btn-link">Xóa</a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
